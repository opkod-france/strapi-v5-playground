{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurant"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "cuisine": {
      "type": "enumeration",
      "enum": ["French", "Italian", "Japanese", "Mexican", "Indian"],
      "required": true
    },
    "address": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "openingHours": {
      "type": "customField",
      "customField": "plugin::opening-hours.opening-hours"
    }
  }
}
